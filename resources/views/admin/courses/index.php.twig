{% extends "admin/template.php.twig" %}

{% block admin_content %}
    <div class="mt-5 col-10 mx-auto">

        {% if success %}
        <div class="alert alert-success" role="alert">
            {{ success }}
        </div>
        {% endif %}
        {% if error('error') %}
            <div class="alert alert-danger" role="alert">
                {{ error('error') }}
            </div>
        {% endif %}

        <div class="row">
            {% for course in courses %}
                <div class="col-xl-4 col-lg-6 col-md-12 col-sm-12">
                    <div class="card mb-4 shadow-sm">
                        <img src="{{ asset('images/courses/' ~ course.cover_image) }}" class="img-fluid" alt="Kurso paveikslelis">
                        <div class="card-body">
                            <h5 class="card-title">{{ course.name }}</h5>
                            <p class="card-text">{{ course.description }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="mx-auto">
                                    <a href="{{ route('admin.courses.edit', {'course' : course.id}) }}"><button class="btn btn-success">Redaguoti</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
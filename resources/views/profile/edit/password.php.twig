{% extends "template.php.twig" %}

{% block content %}

    {{ include('components/header.html.twig') }}

<main class="content">

    <section class="jumbotron text-center">
        <div class="container">
            <h1>Slaptažodžio keitimas</h1>
        </div>
    </section>

    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-lg-12 col-md-12 col-sm-12 d-flex justify-content-center">
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 mt-5">
                    {{ include('components/sidenav.html.twig') }}
                </div>
            </div>

            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 justify-content-center mx-auto my-5 container">
                <div class="shadow border rounded col-xl-6 col-lg-8 col-md-10 col-sm-12 mx-auto">
                    <form action="{{ route('profile.update.password') }}" method="post" class="mt-5 mb-3">
                        {{ csrf() }}
                        {{ method('patch') }}
                        <div class="form-group row">
                            <label for="password" class="col-md-4 col-form-label text-md-right">Senas</label>

                            <div class="col-md-6">
                                <input id="password" type="password" class="form-control{{ error('password') ? ' is-invalid' }}" name="password" required>

                                {% if error('password') %}
                                    <span class="invalid-feedback" role="alert">
                                                <strong>{{ error('password') }}</strong>
                                            </span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password" class="col-md-4 col-form-label text-md-right">Naujas</label>

                            <div class="col-md-6">
                                <input id="password" type="password" class="form-control{{ error('password_new') ? ' is-invalid' }}" name="password_new" required>

                                {% if error('password_new') %}
                                    <span class="invalid-feedback" role="alert">
                                                <strong>{{ error('password_new') }}</strong>
                                            </span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password" class="col-md-4 col-form-label text-md-right">Patvirtinkite</label>

                            <div class="col-md-6">
                                <input id="password" type="password" class="form-control{{ error('password_new_confirmation') ? ' is-invalid' }}" name="password_new_confirmation" required>

                                {% if error('password_new_confirmation') %}
                                    <span class="invalid-feedback" role="alert">
                                                <strong>{{ error('password_new_confirmation') }}</strong>
                                            </span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="d-flex flex-row mt-3">
                            <div class="mr-auto">
                                <a href="{{ route('profile.index') }}"><button class="btn btn-primary" type="button">&larr; Atšaukti</button></a>
                            </div>
                            <div class="ml-auto">
                                <button class="btn btn-success" type="submit">Keisti &rarr;</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

    {{ include('components/footer.html.twig') }}

{% endblock %}
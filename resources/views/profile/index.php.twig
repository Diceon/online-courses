{% extends "template.php.twig" %}

{% block content %}

    {{ include('components/header.html.twig') }}

<main class="content">

    <section class="jumbotron text-center">
        <div class="container">
            <h1>Profilis</h1>
        </div>
    </section>


    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-lg-12 col-md-12 col-sm-12 d-flex justify-content-center">
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 mt-5">
                    {{ include('components/sidenav.html.twig') }}
                </div>
            </div>

            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 justify-content-center mx-auto my-5 container">
                {% if success %}
                <div class="alert alert-success col-6 mx-auto text-center" role="alert">
                    {{ success }}
                </div>
                {% endif %}
                <div class="shadow border rounded col-xl-7 col-lg-10 col-md-10 col-sm-12 mx-auto pb-3">
                    <div class="border-bottom text-center h1 py-2">Asmeninė informacija</div>
                    <div class="d-flex flex-row border-bottom pb-1 h5">
                        <div class="col-5 text-right">Vardas</div>
                        <div class="col-7">{{ auth().firstname }}</div>
                    </div>
                    <div class="d-flex flex-row border-bottom pb-1 h5">
                        <div class="col-5 text-right">Pavardė</div>
                        <div class="col-7">{{ auth().lastname }}</div>
                    </div>
                    <div class="d-flex flex-row border-bottom pb-1 h5">
                        <div class="col-5 text-right">Elektroninis paštas</div>
                        <div class="col-7">{{ auth().email }}</div>
                    </div>
                    <div class="d-flex flex-row border-bottom pb-1 h5">
                        <div class="col-5 text-right">Užsiregistravote</div>
                        <div class="col-7">{{ auth().created_at }}</div>
                    </div>
                    <div class="d-flex flex-row mt-3">
                        <div class="mr-auto">
                            <a href="{{ route('profile.edit.password') }}"><button class="btn btn-primary">Keisti slaptažodį</button></a>
                        </div>
                        <div class="ml-auto">
                            <a href="{{ route('profile.purchases') }}"><button class="btn btn-info">Mokėjimai</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

    {{ include('components/footer.html.twig') }}

{% endblock %}